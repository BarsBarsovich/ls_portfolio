script(type="text/x-template")#skills-list
  .values__widget-container
    ul.skills
      li.skills__item(v-for="skill in skills")
        skills-row(
          :skill="skill"
        )

script(type="text/x-template")#skills-row
  div.skills-row
    .skills-row__title {{skill.skillsGroup}}
    ul.skills-row__list
      li.skills-row__item(v-for="(skillPercents, skillName) in skill.skills")
        skill(
          :skillName="skillName"
          :skillPercents="skillPercents"
        )

script(type="text/x-template")#skill
  .skill
    svg(viewBox="0 0 100 100").skill__svg
      circle(cx="50" cy="50" r="40").skill__base
      circle(cx="50" cy="50" r="40" ref="color-circle" stroke="url(#gradient)" transform='rotate(180 50 50)').skill__progress
    .skill__circle-text {{ skillName }}